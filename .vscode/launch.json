{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: 远程调试",
            "type": "cppdbg",
            "request": "launch",
            // 关键修改1：可执行文件路径指向「当前子项目的build目录」
            // ${fileDirname} 是当前打开的.cpp文件所在目录（如 project1/src）
            // ../build 定位到子项目的build目录（如 project1/build）
            "program": "${fileDirname}/build/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            // 关键修改2：调试工作目录设为「当前子项目的根目录」
            // （如 project1，而非整个myproject，避免相对路径混乱）
            "cwd": "${fileDirname}/..",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "为gdb启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // 保持和tasks.json的label一致，确保调试前自动编译当前子项目
            "preLaunchTask": "C/C++: g++ 远程编译"
        }
    ]
}